{
  "manifest_version": 3,
  "name": "Pomodoro Timer Extension",
  "version": "1.0.0",
  "description": "A Pomodoro timer extension for Chrome",
  "icons": {
    "34": "src/assets/images/icon-34.png",
    "128": "src/assets/images/icon-128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": "src/assets/images/icon-34.png"
  },
  "background": {
    "service_worker": "./src/background/background.ts"
  },
  "options_page": "src/optionsPage/optionsPage.html",
  "content_scripts": [
    {
      "js": ["src/content/content.tsx"],
      "matches": ["<all_urls>"]
    }
  ]
}
